{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "esnext"],
    "module": "commonjs",
    "outDir": "dist/ts",
    "rootDirs": ["src", "stories"],
    "baseUrl": "src",
    "removeComments": true,
    "sourceMap": true
